{
  "name": "jsonpathly",
  "version": "1.5.0",
  "description": "Query json with jsonpath expressions",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js",
    "default": "./dist/esm/index.js"
  },
  "scripts": {
    "generate": "antlr4ts ./src/parser/generated/JSONPath.g4 && npm run format",
    "test": "jest --config jestconfig.json",
    "ci:test": "jest --config jestconfig.json --runInBand --ci --coverage --coverageDirectory=coverage",
    "build": "tsc --project tsconfig.esm.json && tsc --project tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atamano/jsonpathly.git"
  },
  "keywords": [
    "jsonpath",
    "typescript",
    "json",
    "path"
  ],
  "author": "Antoine Tamano",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atamano/jsonpathly/issues"
  },
  "homepage": "https://github.com/atamano/jsonpathly#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "lint-staged": "^10.0.8",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "assert": "^2.0.0"
  }
}