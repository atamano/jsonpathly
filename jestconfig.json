{
    "transform": {
        "^.+\\.jsx?$": "babel-jest",
        "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "modulePathIgnorePatterns": [
        "dist"
    ],
    "transformIgnorePatterns": [
        "node_modules/(?!antlr4/.*)"
    ],
    "coveragePathIgnorePatterns": [
        "parser/generated"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ]
}